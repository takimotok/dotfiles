{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    },
    "version": "2"
  },
  "vim_mode": true,
  "cursor_blink": false,
  "cursor_style": {
    "normal": "block",
    "insert": "bar",
    "visual": "underline"
  },
  "ui_font_size": 14,
  "buffer_font_size": 12,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Everforest Dark"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "vertical_scroll_margin": 0,
  "tab_bar": {
    "show": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  // theme configuration
  "experimental.theme_overrides": {
    // "editor.background": "#55555",
    "syntax": {
      "comment": {
        "font_style": "italic"
      },
      "comment.doc": {
        "font_style": "italic"
      }
    }
  }
}
